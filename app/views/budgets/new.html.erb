<div class="budget-form-container">
  <div class="devise-card">

    <div class="card-body">
      <div class="h2 mt-3">Create your budget !</div>
      <div class="info-log">
        <%= simple_form_for [@budget] do |f| %>
          <%= f.input :name, label: "Budget Name" %>

          <div data-controller="form">
            <%= f.input :participants, collection: @participants, checked: "", legend_tag: true, as: :check_boxes, label: "Who participates with you ?", input_html: { "data-form-target" => "checkbox", "data-action" => "click->form#checker" } %>

            <div class="display-flex-login-buttons" data-form-target="button">
                <%= f.button :submit, "CrÃ©ate budget", class:"btn-primary" %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
  <%= link_to "Go Back", :back, style: "color: white; position: relative; top: 20px; text-align: center", class:"devise-back-link"%>
</div>
